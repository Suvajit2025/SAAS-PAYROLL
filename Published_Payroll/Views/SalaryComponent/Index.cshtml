@* Save Salary Component*@
<script type="text/javascript">
    function SaveSalaryComponent() {
        var jq = jQuery.noConflict();
        var SalaryComponent = jq("#SalaryComponent").val();
        var SalaryComponentCode = jq("#SalaryComponentCode").val();
        var SalaryComponentTypeID = jq("#SalaryComponentTypeID").val();
        var PayGroupsID = jq("#PayGroupsID").val();
