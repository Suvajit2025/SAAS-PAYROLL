@*Get Salary Component By Id*@
<script>
    function GetSalaryComponent(SalaryComponentId) {
        
        var jq = jQuery.noConflict();
        jq.ajax({
            type: "POST",
            url: '/SalaryComponent/GetSalaryComponent',
            data: { "SalaryComponentId": SalaryComponentId },
            datatype: JSON,
            success: function (response) {
                
                RecordLength = response.length;
                jq("#hdnSalaryComponentId").val(response[0].SalaryComponentId);
                jq("#lblSalaryComponent").text(response[0].SalaryComponent);
                jq("#lblSalaryComponentCode").text(response[0].SalaryComponentCode);
                jq("#lblSalaryComponentTypeID").text(response[0].SalaryComponentType);
                jq("#lblPayGroupID").text(response[0].PayGroupName);
                jq("#lblDescription").text(response[0].Description);
                jq("#txtSalaryComponent").val(response[0].SalaryComponent);
                jq("#txtSalaryComponentCode").val(response[0].SalaryComponentCode);
                jq("#txtSalaryComponentTypeID").val(response[0].SalaryComponentTypeID);
                jq("#txtPayGroupID").val(response[0].PayGroupsID);
                jq("#txtDescription").val(response[0].Description)
            },
            error: function (er) {

                console.log(er);
            }
        });
    }
</script>
