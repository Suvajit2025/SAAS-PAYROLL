@*Save Pay Group*@
<script>
    function SavePayGroup() {
        var jq = jQuery.noConflict();
        
        var PayGroupName = jq("#PayGroupName").val();
        var Description = jq("#Description").val();
        var PayGroupMasterCode = jq("#PayGroupMasterCode").val();
        var ConcernHRPersonnel = jq("#ConcernHRPersonnel").val();
        if (PayGroupName == "") {
            jq("#msgPayGroupName").html("Please Enter PayGroupName");
            return false;
        }
        else {
            jq("#msgPayGroupName").html("");
        }
        if (Description == "") {
            jq("#msgDescription").html("Please Enter Description");
            return false;
        }
        else {
            jq("#msgDescription").html("");
        }
        if (PayGroupMasterCode == "") {
            jq("#msgMasterCode").html("Please Enter Master Code");
            return false;
        }
        else {
            jq("#msgMasterCode").html("")
        }
        if (ConcernHRPersonnel == "0") {
            jq("#msgConcernHRPersonnel").html("Please Choose ConcernHRPersonnel");
            return false;
        }
        else {
            jq("#msgConcernHRPersonnel").html("")
        }
        
        jq.ajax({
            type: "POST",
            url: '/PayGroup/SavePayGroup',
            
            data: {
                "PayGroupName": PayGroupName, "Description": Description, "PayGroupMasterCode": PayGroupMasterCode,
                "ConcernHRPersonnel": ConcernHRPersonnel
            },
            datatype: "JSON",
            success: function (data) {
                
                if (data == "saved successfully") {

                    swal({
                        title: "Success!",
                        text: "Pay Group has been Added Successfully!",
                        type: "success"
                    }).then(function () {
                        window.location.href = "/PayGroup";
                    });
                }
                else if (data == "PayGroup Already taken , please try with different name") {
                    jq("#msgPayGroupName").html("PayGroup Already taken, please try with different name");
                }
                else if (data == "PayGroup Master Code Already taken , please try with different Code") {
                    jq("#msgMasterCode").html("This Master Code Already taken , please try with different Code");
                }

            },
            error: function (er) {
                console.log(er);
            }
        });
    }
</script>
