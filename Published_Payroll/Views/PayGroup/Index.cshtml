            success: function (response) {
                
                RecordLength = response.length;
                jq("#hdnPayGroupId").val(response[0].PayGroupID);
                jq("#lblPayGroupName").text(response[0].PayGroupName);
                jq("#lblDescription").text(response[0].Description);
                jq("#lblPayGroupMasterCode").text(response[0].PayGroupMasterCode);
                jq("#lblConcernHRPErsonnel").text(response[0].EMPLOYEENAME);
                jq("#txtPayGroupName").val(response[0].PayGroupName);
                jq("#txtDescription").val(response[0].Description);
                jq("#txtMasterCode").val(response[0].PayGroupMasterCode);
                jq("#txtConcernHRPersonnel").val(response[0].ConcernHRPersonnel);
