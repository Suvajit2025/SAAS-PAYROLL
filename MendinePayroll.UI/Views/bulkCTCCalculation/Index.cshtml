<section role="main" class="content-body">
    <div class="card mt-4">
        <div class="card-header bg-dark text-white">
            Bulk Salary Auto Calculation
        </div>
        <div class="card-body">
            <label class="fw-bold">Employee IDs (comma / line separated)</label>
            <textarea id="txtEmpIds" rows="10" class="form-control"
                      placeholder="471,476,480..."></textarea>

            <button class="btn btn-success mt-3" onclick="runBulk()">
                Run Bulk Calculation
            </button>

            <div id="resultBox" class="alert mt-3 d-none"></div>
        </div>
    </div>
</section>
<script>
function runBulk() {
    let ids = $('#txtEmpIds').val();

    if (!ids) {
        alert('Enter Employee IDs');
        return;
    }

    $('#resultBox').removeClass('d-none alert-danger alert-success')
                   .addClass('alert alert-info')
                   .html('Processing...');

    $.ajax({
        url: '@Url.Action("AutoCalculateByEmployeeBulk","bulkCTCCalculation")',
        type: 'POST',
        data: { employeeIds: ids },
        success: function (res) {
            if (res.status === 1) {
                $('#resultBox')
                  .removeClass('alert-info')
                  .addClass('alert-success')
                  .html(
                    `Total: ${res.total}<br/>
                     Success: ${res.success}<br/>
                     Failed: ${res.failed}`
                  );
            } else {
                $('#resultBox')
                  .removeClass('alert-info')
                  .addClass('alert-danger')
                  .html(res.message);
            }
        }
    });
}
</script>
