    function recalcNetUI() {
        // 1. Get Base Totals from the component table footers
        let gross = parseFloat($("#slipTotalEarn").text()) || 0;
        let ded = parseFloat($("#slipTotalDed").text()) || 0;
        let contrib = parseFloat($("#slipTotalContrib").text()) || 0;

        // 2. Get Input States from Sidebar
        let mAdd = parseFloat($("#txtManualAdd").val()) || 0;
        let mDed = parseFloat($("#txtManualDed").val()) || 0;
        let isWaived = $("#chkWaiveLoan").is(":checked");

        // 3. Handle Loan Row UI & Deduction Logic
        const loanRow = $(".loan-row");
        const masterEMI = window.currentLoanEMI || 0;

        // Check what the Loan row CURRENTLY shows in the UI
        let uiLoanAmt = parseFloat(loanRow.find(".slip-amt").text().replace(/,/g, '')) || 0;
        let activeDeduction = ded;

        if (isWaived) {
            // Visual: Strike-through and "SKIPPED" badge
            loanRow.css({ "text-decoration": "line-through", "opacity": "0.5", "color": "#991b1b" });
            if (loanRow.find(".waive-tag").length === 0) {
                loanRow.find("td:first-child").append(' <span class="badge badge-danger waive-tag" style="font-size:9px;">SKIPPED</span>');
            }

            // 🔑 UI CORRECTION: Set the row value to 0.00
            loanRow.find(".slip-amt").text("0.00");

            // Math: If the total 'ded' was including the EMI, subtract it
            if (uiLoanAmt > 0) {
                activeDeduction = ded - uiLoanAmt;
            }
        } else {
            // Visual: Reset row
            loanRow.css({ "text-decoration": "none", "opacity": "1", "color": "inherit" });
            $(".waive-tag").remove();

            // 🔑 UI CORRECTION: Restore the Master EMI value to the table cell
            loanRow.find(".slip-amt").text(masterEMI.toLocaleString('en-IN', { minimumFractionDigits: 2 }));

            // Math: If the total 'ded' was showing 0 for loan, add the EMI back
            if (uiLoanAmt === 0) {
                activeDeduction = ded + masterEMI;
            }
        }

        // 4. 🔑 UI CORRECTION: Update the "TOTAL DEDUCTION" footer in the table
        // This ensures the Deduction box total matches the rows above it
        $("#slipTotalDed").text(activeDeduction.toFixed(2));

        // 5. Calculate Final Banners
        let finalGross = gross + mAdd;
        let finalDeduction = activeDeduction + mDed;
        let finalTakeHome = finalGross - finalDeduction;
        let finalCTC = finalGross + contrib;

        // 6. Update Dynamic Manual Rows
        $(".manual-adj-row").remove();
        if (mAdd > 0) {
            $("#tableEarningsBody").append(`<tr class="manual-adj-row" style="background:#f0fdf4; color:#166534; font-weight:600;"><td>Manual Addition</td><td class="slip-amt">+${mAdd.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</td></tr>`);
        }
        if (mDed > 0) {
            $("#tableDeductionsBody").append(`<tr class="manual-adj-row" style="background:#fef2f2; color:#991b1b; font-weight:600;"><td>Manual Deduction</td><td class="slip-amt">-${mDed.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</td></tr>`);
        }

        // 7. Update Primary Banners
        $("#lblModalNetPay").text("₹ " + finalTakeHome.toLocaleString('en-IN', { minimumFractionDigits: 2 }));
        $("#lblModalCTC").text("₹ " + finalCTC.toLocaleString('en-IN', { minimumFractionDigits: 2 }));

        // 8. Extra Pay Card Logic
        let diff = finalTakeHome - window.originalTakeHome;
        let absDiff = Math.abs(diff);
        const card = $("#adjustmentCard");

        if (absDiff > 0.1) {
            card.show();
            $(".summary-banner").css("grid-template-columns", "1fr 1fr 1fr");
            $("#lblAdjAmount").text("₹ " + absDiff.toLocaleString('en-IN', { minimumFractionDigits: 2 }));
            $("#lblAdjTypeTag").text(diff > 0 ? "Extra Pay" : "Deduction Adjustment");
        } else {
            card.hide();
            $(".summary-banner").css("grid-template-columns", "1fr 1fr");
        }
    }
    
