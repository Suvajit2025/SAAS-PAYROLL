    function applyEmployeeWiseFilters() {
        if (!empDtInstance) return;

        const month = $('#ddlEmpMonth').val();
        const year = $('#ddlEmpYear').val();
        const group = $('#ddlEmpPayGroup').val();

        // Index 8: MonthID, Index 9: YearID, Index 10: PayGroupID
        // Using Regex ^value$ for exact match (prevents '1' matching '11')
        empDtInstance
            .column(8).search(month ? '^' + month + '$' : '', true, false)
            .column(9).search(year ? '^' + year + '$' : '', true, false)
            .column(10).search(group ? '^' + group + '$' : '', true, false)
            .draw();
    }
    function escapeHtml(text) {
        return String(text ?? "")
            .replaceAll("&", "&amp;")
            .replaceAll("<", "&lt;")
            .replaceAll(">", "&gt;")
            .replaceAll('"', "&quot;")
            .replaceAll("'", "&#039;");
    }
