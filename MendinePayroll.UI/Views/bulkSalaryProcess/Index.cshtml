    function openLoanLedger(empId, empName, currentEmi, payConfigId, procMonth, procYear, referenceIds) {
        $("#loanEmpLabel").text(empName);

        // Reset table and show loading state
        $("#loanHistoryBody").html('<tr><td colspan="6" class="text-center" style="padding:20px;">Loading Ledger...</td></tr>');

        $.ajax({
            url: '/bulkSalaryProcess/GetEmployeeLoanLedger',
            type: 'GET',
            data: {
                employeeId: empId,
                payConfigId: payConfigId,
                Currentemi: currentEmi,
                ProcessMonth: procMonth,
                ProcessYear: procYear,
                ReferenceIds: referenceIds
            },
            success: function (res) {
                if (res.Success) {
                    // 1. Update the 3 Top Summary Cards
                    $("#valOpen").text("₹ " + res.OpeningBalance.toLocaleString('en-IN', { minimumFractionDigits: 2 }));
                    $("#valEmi").text("₹ " + res.CurrentEMI.toLocaleString('en-IN', { minimumFractionDigits: 2 }));
                    $("#valClose").text("₹ " + res.ClosingBalance.toLocaleString('en-IN', { minimumFractionDigits: 2 }));

                    // 2. Render the Filtered Schedule (Last 3 Months)
                    let html = "";
                    if (res.Schedule && res.Schedule.length > 0) {
                        res.Schedule.forEach(s => {
                            const rowStyle = s.IsCurrent
                                ? "background: #fffbeb; border-left: 4px solid #f59e0b;"
                                : "color: #64748b;";

                            const statusClass = (s.Status === 'Paid' || s.Status === 'Processed') ? 'badge-active' :
                                (s.Status === 'Skipped' ? 'badge-inactive' : '');

                            html += `
                        <tr style="${rowStyle} border-bottom: 1px solid #f1f5f9;">
                            <td style="padding:10px; text-align:center; font-weight:bold;">${s.EmiNo}</td>
                            <td style="padding:10px;">
                                ${s.Period}
                                ${s.IsCurrent ? '<span style="font-size:8px; background:#f59e0b; color:#fff; padding:1px 3px; border-radius:2px; margin-left:4px; vertical-align:middle;">CURR</span>' : ''}
                            </td>
                            <td style="padding:10px; text-align:right; font-family:monospace;">₹${s.Opening.toLocaleString('en-IN')}</td>
                            <td style="padding:10px; text-align:right; font-family:monospace; color:#16a34a; font-weight:600;">₹${s.Principal.toLocaleString('en-IN')}</td>
                            <td style="padding:10px; text-align:right; font-family:monospace;">₹${s.Closing.toLocaleString('en-IN')}</td>
                            <td style="padding:10px; text-align:center;">
                                <span class="status-badge ${statusClass}" style="font-size:10px; padding:2px 6px;">${s.Status}</span>
                            </td>
                        </tr>`;
                        });
                    } else {
                        html = '<tr><td colspan="6" class="text-center" style="padding:20px; color:#94a3b8;">No recent records found.</td></tr>';
                    }
                    $("#loanHistoryBody").html(html);
                } else {
                    toastr.error(res.Message || "Failed to load loan ledger.");
                    closeModal('loanModal');
                }
            },
            error: function () {
                toastr.error("Server error while fetching loan data.");
                closeModal('loanModal');
            }
        });

        $("#loanModal").fadeIn(200);
    }

    function saveModalSalary() {
        const empId = window.editSalaryCtx.employeeId;
        const batchId = window.editSalaryCtx.previewBatchId;

        // 1. Get Header Values (Manual Adjustments & Final Days)
        const manualAdd = parseFloat($("#txtManualAdd").val()) || 0;
        const manualDed = parseFloat($("#txtManualDed").val()) || 0;
        const finalPaidDays = parseFloat($("#txtFinalDays").val()) || lockOriginalPaidDays;
        const isLoanWaived = $("#chkWaiveLoan").is(":checked");

        const componentEdits = [];

        // 2. Scrape ALL rows from all three breakdown tables
        // This captures pro-rata changes from Paid Days automatically
        $("#tableEarningsBody tr, #tableDeductionsBody tr, #tableContribBody tr").each(function () {
            const $row = $(this);
            const configId = $row.data("config-id");

            if (configId) {
                const isLoanRow = $row.hasClass("loan-row");
                // Clean string of ₹ and commas before parsing
                const amount = parseFloat($row.find(".slip-amt").text().replace(/[₹,]/g, '')) || 0;

                componentEdits.push({
                    PayConfigId: parseInt(configId),
                    Amount: amount,
                    // Only the specific loan row carries waiver/refId status
                    IsWaived: isLoanRow ? isLoanWaived : false,
                    ReferenceIds: isLoanRow ? (window.currentModalLoanRefIds || "") : ""
                });
            }
        });

        // 3. Construct the Full DTO for the Controller
        const payload = {
            PreviewBatchId: batchId,
            EmployeeId: empId,
            PaidDays: finalPaidDays,
            ManualAddition: manualAdd,
            ManualDeduction: manualDed,
            Components: componentEdits
        };

        showPayrollLoader();

        $.ajax({
            url: '/bulkSalaryProcess/SubmitFullPreviewUpdate',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (res) {
                if (res.success) {
                    toastr.success("Salary details updated successfully");
                    closeModal('editSalaryModal');

                    // Refresh the specific row in your main grid or reload the grid
                    loadPayrollBatchGrid();
                    loadEmployeeWiseBatchGrid();
                } else {
                    toastr.error(res.message || "Failed to update salary");
                }
            },
            error: function () {
                toastr.error("Server connection error");
            },
            complete: hidePayrollLoader
        });
    }
