    function applyDayAdjustment() {
        // 1. Always use the LOCKED variable as the starting point
        const baseDays = lockOriginalPaidDays;

        // 2. Get the adjustment value (handle empty/erased as 0)
        const rawVal = document.getElementById('txtDayAdjustment').value;
        const adjValue = rawVal === "" ? 0 : Math.abs(parseFloat(rawVal));

        // 3. Determine direction (Toggle Checked = DEDUCT)
        const isDeduct = document.getElementById('chkAdjType').checked;
        const maxLimit = window.currentMonthMaxDays || 31;

        // 4. Calculate Final Days based on the LOCKED base
        let finalDays = isDeduct ? (baseDays - adjValue) : (baseDays + adjValue);

        // 5. Boundary Validations
        if (finalDays < 0) {
            finalDays = 0;
        }

        if (!isDeduct && finalDays > maxLimit) {
            alert(`Cannot exceed ${maxLimit} days for this month.`);
            finalDays = maxLimit;
            // Adjust the user's input to represent the max possible addition
            document.getElementById('txtDayAdjustment').value = (maxLimit - baseDays);
        }

        // 6. Update UI
        document.getElementById('txtFinalDays').value = finalDays;

        // 7. Trigger Recalculation
        // If user erases the box (adjValue is 0), finalDays will equal baseDays (Original).
        onPaidDaysChange(finalDays);
    }
    function updateAdjustmentCard(adjDays, isDeduct) {
        const card = $("#adjustmentCard");

        if (adjDays <= 0) {
            card.hide();
            // Reset grid back to 2 columns if hidden (optional)
            $(".summary-banner").css("grid-template-columns", "1fr 1fr");
            return;
        }

        // Show card and set grid to 3 columns
        card.show();
        $(".summary-banner").css("grid-template-columns", "1fr 1fr 1fr");

        // Calculation (Basic Pro-rata)
        const totalEarn = parseFloat($("#slipTotalEarn").text()) || 0;
        const monthDays = window.currentMonthMaxDays || 30;
        const perDayRate = totalEarn / (window.editSalaryCtx.lastPaidDays || monthDays);
        const impactAmount = perDayRate * adjDays;

        // UI Updates
        $("#lblAdjAmount").text("₹ " + impactAmount.toLocaleString('en-IN', { minimumFractionDigits: 2 }));
        $("#lblAdjTypeTag").text(isDeduct ? "Deduction Impact" : "Addition Impact");

        // Store data for saving
        window.lastAdjustmentData = {
            Days: adjDays,
            Amount: impactAmount.toFixed(2),
            Type: isDeduct ? "DEDUCT" : "ADD"
        };
    }

