        monthArray[5] = "June";
        monthArray[6] = "July";
        monthArray[7] = "August";
        monthArray[8] = "September";
        monthArray[9] = "October";
        monthArray[10] = "November";
        monthArray[11] = "December";
        var currentMonth = (new Date).getMonth() + 1;
        for (m = 0; m <= 11; m++) {
            var optn = document.createElement("OPTION");
            optn.text = monthArray[m];
            optn.value = (m + 1);

            if (m + 1 == (currentMonth-1)) {
                optn.selected = true;
            }

            document.getElementById('ddlmonth').options.add(optn);
        }
    });
    $(document).ready(function () {
        var thisYear = (new Date()).getFullYear();
        for (y = 2000; y <= 2050; y++) {
            var optn = document.createElement("OPTION");
            optn.text = y;
            optn.value = y;

            // if year is 2015 selected
            if (y == thisYear) {
                optn.selected = true;
            }

            //document.getElementById('ddlyear').options.add(optn);
            document.getElementById('ddlyearedit').options.add(optn);
        }
        var monthArray = new Array();
        monthArray[0] = "January";
        monthArray[1] = "February";
        monthArray[2] = "March";
        monthArray[3] = "April";
        monthArray[4] = "May";
        monthArray[5] = "June";
        monthArray[6] = "July";
        monthArray[7] = "August";
        monthArray[8] = "September";
        monthArray[9] = "October";
        monthArray[10] = "November";
        monthArray[11] = "December";
        var currentMonth = (new Date).getMonth() + 1;
        for (m = 0; m <= 11; m++) {
            var optn = document.createElement("OPTION");
            optn.text = monthArray[m];
            // server side month start from one
            optn.value = (m + 1);

            // if june selected
            if (m + 1 == currentMonth) {
                optn.selected = true;
            }

            //document.getElementById('ddlmonth').options.add(optn);
            document.getElementById('ddlmonthedit').options.add(optn);
        }
    });
    function SavePayGroupBonus() {
        
        var query = window.location.search.substring(1);
        var parms = query.indexOf('=');
        var paygroupid = query.substring(parms + 1);
        var payGroupid = paygroupid;
        var month = $("#ddlmonth option:selected").text();
        var year = $("#ddlyear").val();
        var overtime = $("#OverTimeHours").val();
        var productionbonus = $("#ProductionBonus").val();
        var TargetAchieved = $("#TargetAchieved").val();
        var Id = $("#hdnPayGroupId").val();
        $.ajax({
            type: "POST",
            url: '/PayGroup/SavePayGroupBonus',

            data: {
                "ID": Id,
                "PayGroupId": payGroupid, "Month": month, "Year": year, "OverTime": overtime,
                "ProductionBonus": productionbonus, "TargetAchieved": TargetAchieved
            },
            datatype: "JSON",
            success: function (data) {
                
                if (data == "saved successfully") {

                    swal({
                        title: "Success!",
                        text: "Pay Group has been Saved Successfully!",
                        type: "success"
                    }).then(function () {
                        window.location.href = "/PayGroup/PayGroupBonusDetails?cal=" + payGroupid + "";
                        });

                }
                else if (data == "This month data of the year is alreay exist") {
                    $("#msgMonth").html("This month data of the year is alreay exist");
                }
            },
            error: function (er) {
                console.log(er);
            }
        });
    }
    function GetPayGroupBonusById(PayGroupId) {
        
        var jq = jQuery.noConflict();
        jq.ajax({
            type: "POST",
            url: '/PayGroup/GetPayGroupBonusById',
            data: { "ID": PayGroupId },
            datatype: JSON,
            success: function (response) {
                
                RecordLength = response.length;
                jq("#hdnPayGroupId").val(response[0].ID);
                jq("#lblMonth").text(response[0].Month);
                jq("#lblYear").text(response[0].Year);
                jq("#lblOverTimeHours").text(response[0].OverTimeHours);
                jq("#lblProductionBonus").text(response[0].ProductionBonus);
                jq("#lblTargetAchieved").text(response[0].TargetAchieved);
                jq("#ddlyearedit").val(response[0].Year);
                jq('#ddlmonthedit option').map(function () {
                    if ($(this).text() == response[0].Month) return this;
                }).attr('selected', 'selected');

                jq("#txtOvertimehours").val(response[0].OverTimeHours);
                jq("#txtProductionbonus").val(response[0].ProductionBonus);
                jq("#txtTargetAchieved").val(response[0].TargetAchieved);
            },
            error: function (er) {

                console.log(er);
            }
        });
    }

    function UpdatePayGroupBonus() {
        
        var query = window.location.search.substring(1);
        var parms = query.indexOf('=');
        var paygroupid = query.substring(parms + 1);
        var payGroupid = paygroupid;
        var month = $("#ddlmonthedit option:selected").text();
        var year = $("#ddlyearedit").val();
        var overtime = $("#txtOvertimehours").val();
        var productionbonus = $("#txtProductionbonus").val();
        var TargetAchieved = $("#txtTargetAchieved").val();
        var Id = $("#hdnPayGroupId").val();
        $.ajax({
            type: "POST",
            url: '/PayGroup/SavePayGroupBonus',

            data: {
                "ID": Id,
                "PayGroupId": payGroupid, "Month": month, "Year": year, "OverTime": overtime,
                "ProductionBonus": productionbonus, "TargetAchieved": TargetAchieved
            },
