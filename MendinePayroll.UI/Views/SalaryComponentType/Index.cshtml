@model MendinePayroll.Models.SalaryComponentTypeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Add*@
<div class="modal fade modal-header-color zoom-anim-dialog" id="AddSalaryComponentType" tabindex="-1" role="dialog" aria-labelledby="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <section class="">
                <header class="panel-heading bg-tertiary">
                    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="panel-title  text-white">Add New SalaryComponentType</h2>
                </header>
            </section>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">SalaryComponentType <span class="required">*</span></label>
                                <div class="input-group btn-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-credit-card"></i>
                                    </span>
                                    @Html.TextBoxFor(G => G.SalaryComponentType, new { @class = "form-control" })
                                </div>
                                <span id="msgSalaryComponentType" style="color:red;"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="btnAddGroup" class="btn btn-tertiary" onclick="SaveSalaryComponentType()">
                    <i class="fa fa-plus-square space-right"></i> Add SalaryComponentType
                </button>
            </div>

            <div id="progress" style="display:none;">
                <div class="col-md-12 text-center">
                    <img src="~/Contents/images/ajax-loader.gif" />
                </div>
            </div>

        </div>
    </div>
</div>

@*Edit*@
