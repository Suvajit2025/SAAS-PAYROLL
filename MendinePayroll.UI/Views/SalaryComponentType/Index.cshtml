@* Save Salary Component*@
<script type="text/javascript">
        function SaveSalaryComponentType() {
        var jq = jQuery.noConflict();
        var SalaryComponentType = jq("#SalaryComponentType").val();
        if (SalaryComponentType == "") {
            jq("#msgSalaryComponentType").html("Please Enter SalaryComponentType");
        }
        else {
            jq("#msgSalaryComponentType").html("");
        }
        jq.ajax({
            type: "POST",
            url: '/SalaryComponentType/SaveSalaryComponentType',
            data: { "SalaryComponentType": SalaryComponentType},
            datatype: "JSON",
            success: function (data) {
                
                if (data == "Save Succesfully") {

                    swal({
                        title: "Success!",
                        text: "Salary Component Type has been Added Successfully!",
                        type: "success"
                    }).then(function () {
                        window.location.href = "/SalaryComponentType";
                    });
                }
            },
            error: function (er) {
                console.log(er);
            }
        });
    }
</script>
@* Update Salary Component*@
<script type="text/javascript">
        function UpdateSalarycomponentType() {
            var jq = jQuery.noConflict();
            var SalaryComponentTypeID = jq("#hdnSalaryComponentTypeID").val();
            var SalaryComponentType = jq("#txtSalaryComponentTypeedit").val();
            if (SalaryComponentType == "") {
                jq("#msgSalaryComponentTypeedit").html("Please Enter PayGroupName");
            }
            else {
                jq("#msgSalaryComponentTypeedit").html("");
            }
            jq.ajax({
                type: "POST",
                url: '/SalaryComponentType/UpdateSalaryComponentType',
                data: { "SalaryComponentTypeID": SalaryComponentTypeID, "SalaryComponentType": SalaryComponentType },
                datatype: "JSON",
                success: function (data) {
                    
                    if (data == "Save Succesfully") {

                        swal({
                            title: "Success!",
                            text: "Salary Component Type has been Updated Successfully!",
                            type: "success"
                        }).then(function () {
                            window.location.href = "/SalaryComponentType";
                        });
                    }
                },
                error: function (er) {
                    console.log(er);
                }
            });
        }
</script>
@*Get Salary Component By Id*@
<script>
        function GetSalaryComponentType(SalaryComponentTypeID) {
        
        var jq = jQuery.noConflict();
        jq.ajax({
            type: "POST",
            url: '/SalaryComponentType/GetSalaryComponentType',
            data: { "SalaryComponentTypeID": SalaryComponentTypeID },
            datatype: JSON,
            success: function (response) {
                
                RecordLength = response.length;
                jq("#hdnSalaryComponentTypeID").val(response[0].Id);
                jq("#lblSalaryComponentType").text(response[0].SalaryComponentType);
                jq("#txtSalaryComponentTypeedit").val(response[0].SalaryComponentType)
            },
            error: function (er) {

                console.log(er);
            }
        });
    }
</script>
