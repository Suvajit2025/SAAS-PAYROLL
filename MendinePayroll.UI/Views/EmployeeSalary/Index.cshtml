@{
    ViewBag.Title = "Payroll Head Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
    </header>
    <!-- Table Panel -->
    <section class="panel" style="position:relative;">

        <header class="panel-heading">
            <h2 class="panel-title">Payroll Head Salary</h2>
            <div class="panel-actions">
                <button onclick="BacktoList();" class="btn btn-sm btn-default text-sm text-weight-semibold">
                    <i class="fa fa-arrow-circle-left"></i> Back
                </button>
                 
            </div>
        </header>
    </section>
    <section class="panel" style="position:relative;">
        <header class="panel-heading">
            <h2 class="panel-title">Payroll Head Salary</h2>
            <div class="panel-actions"> 
                <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#salaryModal">
                    <i class="fa fa-plus"></i> Add New
                </button>
            </div>
        </header>
        <div class="panel-body" style="overflow:auto; max-height:400px;">
            <div style="min-width:1000px;">
                <table id="salaryTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ref No</th>
                            <th>Ref Date</th>
                            <th>Salary Month</th>
                            <th>Salary From</th>
                            <th>Salary To</th>
                            <th>Remarks</th>
                            <th>Active</th>
                            <th style="width:120px; text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="salaryBody"></tbody>
                </table>
            </div>
        </div>
    </section>
</section>

    <!-- Modal -->
    <div class="modal fade" id="salaryModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="frmPayrollHead">
                    <div class="modal-header bg-primary text-white">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Payroll Head Salary</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ref No</label>
                                    <input type="text" id="RefNo" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ref Date</label>
                                    <input type="date" id="RefDate" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Salary Month</label>
                                    <input type="number" id="SalaryMonth" min="1" max="12" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Salary From</label>
                                    <input type="date" id="SalaryFrom" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Salary To</label>
                                    <input type="date" id="SalaryTo" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Remarks</label>
                                    <input type="text" id="Remarks" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Active</label>
                                    <select id="ActiveFlag" class="form-control">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-default">Clear</button>
                        <button type="button" class="btn btn-primary" onclick="addSalaryRow()">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let rowCount = 1;
        function addSalaryRow() {
            const refNo = document.getElementById("RefNo").value;
            const refDate = document.getElementById("RefDate").value;
            const month = document.getElementById("SalaryMonth").value;
            const from = document.getElementById("SalaryFrom").value;
            const to = document.getElementById("SalaryTo").value;
            const remarks = document.getElementById("Remarks").value;
            const active = document.getElementById("ActiveFlag").value == "1" ? "Active" : "Inactive";

            if (!refNo || !refDate || !month || !from || !to) {
                alert("Please fill all required fields!");
                return;
            }

            const tbody = document.getElementById("salaryBody");
            const tr = document.createElement("tr");
            tr.innerHTML = `
                <td>${rowCount++}</td>
                <td>${refNo}</td>
                <td>${refDate}</td>
                <td>${month}</td>
                <td>${from}</td>
                <td>${to}</td>
                <td>${remarks}</td>
                <td>${active}</td>
                <td class="text-center">
                    <button class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></button>
                    <button class="btn btn-sm btn-danger" onclick="this.closest('tr').remove()"><i class="fa fa-trash"></i></button>
                </td>
            `;
            tbody.appendChild(tr);

            // reset form + close modal
            document.getElementById("frmPayrollHead").reset();
            $('#salaryModal').modal('hide');
        }
    </script>
