
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .payrolltable {
        font-size: 10px;
    }
</style>
<div>
    <section role="main" class="content-body">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Annexure 1 </h2>
            </header>
            <div class="panel-body listpanel">
                <div class="form-group row">
                    <div class="col-md-1 mb-3">
                        <label>Month</label>
                    </div>
                    <div class="col-md-2">
                        <select id="ddlMonth" class="form-control"></select>
                    </div>
                    <div class="col-md-1 mb-3">
                        <label>Year</label>
                    </div>
                    <div class="col-md-2">
                        <select id="ddlYear" class="form-control"></select>
                    </div>

                    <div class="col-md-1 mb-3">
                        <label>Employee</label>
                    </div>
                    <div class="col-md-3">
                        <select id="ddlEmployee" class="select" multiple></select>
                        @* data-mdb-clear-button="true"*@
                        @*<select id="ddlEmployee" class="form-control" ></select>*@
                    </div>
                    <div class="col-md-2 mb-3">
                        <button id="btnShow" class="mb-sm mr-xs btn btn-sm btn-tertiary text-sm text-weight-semibold">Show</button>
                        @*<button id="btnSave" class="mb-sm mr-xs btn btn-sm btn-tertiary text-sm text-weight-semibold">Save</button>*@
                    </div>
                </div>
                <div class="mt-5 table-responsive ">
                    <table class="table mb-none payrolltable" id="tblAnnexure">
                        <thead>
                            <tr>
                                <th>Serial No (As In Challan)</th>
                                <th>Deductee Name</th>
                                <th>PAN</th>
                                <th>Section Code</th>
                                <th>Payment Amount</th>
                                <th>Date of TAX Deducted</th>
                                <th>Date of Amount Paid</th>
                                <th>TDS Amount</th>
                                <th>Surcharge Amount</th>
                                <th>Health & EC Amount</th>
                                <th>SHEC Amount</th>
                                <th>Total Amount</th>
                                <th>Total Tax Deducted</th>
                                <th>Reason For Non Deduction</th>
                                <th>Certificate No</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody id="tblAnnexureBody">
                        </tbody>
                    </table>
                </div>

            </div>
        </section>
    </section>

