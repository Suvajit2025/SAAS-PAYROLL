@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <section role="main" class="content-body">
        <section class="panel">
            <header class="panel-heading">
                <div class="form-group row">
                    <div class="col-md-6">
                        <h2 class="panel-title">Loan Approval</h2>
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="button" id="btnShow" class="btn btn-sm btn-primary" value="Show Loan Application " />
                    </div>
                </div>
            </header>
            <div class="panel-body listpanel">
                <div class="form-group mb-2">
                    <table id="tblData" class="table tabl-dm small table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:8%">APP Date</th>
                                <th style="width:15%">APP No</th>
                                <th style="width:10%">Employee No</th>
                                <th style="width:18%">Employee Name</th>
                                <th style="width:12%">Loan No</th>
                                <th style="width:8%">Requested Amount</th>
                                <th style="width:8%">Approved Amount</th>
                                <th style="width:21%">Action</th>
                            </tr>
                        </thead>
                        <tbody id="tblDataBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </section>

    <!-- Modal Loan Data -->
    <div class="modal" tabindex="-1" role="dialog" id="modalLoan">
        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title bold" id="modalLoanTitle"></h4>
                </div>
                <div class="modal-body">
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Loan No</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtLoanNo" readonly />
                            <input type="hidden" id="hdIDApp" />
                            <input type="hidden" id="hdAppno" />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Application No</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtLoanAppno" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Employee No</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtLoanEmpno" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Employee Name</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtLoanEmpname" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Loan Amount</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtLoanAmount" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Loan Installment</label>
                        </div>
                        <div class="col-md-6">
                            <input type="number" class="form-control form-control-sm " id="txtLoanInstallment" />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Loan Tenure</label>
                        </div>
                        <div class="col-md-6">
                            <input type="number" class="form-control form-control-sm" id="txtLoanTenure" />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Start Date</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" id="txtLoanSDate" />
                        </div>
                    </div>
                    <div class="from-group row mb-2" style="display:none">
                        <div class="col-md-6">
                            <label>End Date</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" id="txtLoanEDate" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" id="btnLoanCreation">Create Loan</button>
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Approval Data -->
    <div class="modal" tabindex="-1" role="dialog" id="modalLoanApp">
        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title bold" id="modalTitleApp"></h4>
                </div>
                <div class="modal-body">
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Employee No</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtEmpno" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Employee Name</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtEmpname" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Requested Amount</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtRequestedAmount" readonly />
                            <input type="hidden" id="hdIDApplication" />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Pupose</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" id="txtPurpose" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Reason</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" id="txtReason" readonly />
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Approved Amount</label>
                        </div>
                        <div class="col-md-6">
                            <input type="Text" class="form-control form-control-sm" id="txtApprovedAmount" />
                        </div>
                    </div>

                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Approve/Reject</label>
                        </div>
                        <div class="col-md-6">
                            <select id="ddlApproval" class="form-control form-control-sm">
                                <option value="APPROVED">APPROVED</option>
                                <option value="REJECTED">REJECTED</option>
                            </select>
                        </div>
                    </div>
                    <div class="from-group row mb-2">
                        <div class="col-md-6">
                            <label>Reject Reason</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" id="txtRejectReason" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-sm btn-primary" id="btnApprovedLoan" value="Approved Loan"/>
                    <input type="button" class="btn btn-sm btn-primary" data-dismiss="modal" id="btnApprovedClose" value="Close" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/ProjectJS/LoanApproval.js"></script>
