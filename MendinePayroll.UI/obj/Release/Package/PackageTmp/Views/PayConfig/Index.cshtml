<script>
    function GetPayConfig(PayConfigID) {
        
        var jq = jQuery.noConflict();
        jq.ajax({
            type: "POST",
            url: '/PayConfig/GetPayConfig',
            data: { "PayConfigID": PayConfigID },
            datatype: JSON,
            success: function (response) {
                
                RecordLength = response.length;
                jq("#hdnPayConfigId").val(response[0].PayConfigId);
                jq("#lblPayConfigName").text(response[0].PayConfigName);
                jq("#lblPayConfigType").text(response[0].PayConfigType);
                var a = response[0].IScalculative;
                if (a == false) {
                    IScalculative = "0";
                    entrytype = "Manual";
                }
                else {
                    IScalculative = "1";
                    entrytype = "Calculative";
                }
                jq("#lblPayConfigEntryType").text(entrytype);
                jq("#txtPayConfigName").val(response[0].PayConfigName);
                jq("#ddlPayConfigTypeedit").val(response[0].PayConfigType);
                jq("#ddlPayConfigentryedit").val(IScalculative);
            },
            error: function (er) {

                console.log(er);
            }
        });
    }
</script>  
