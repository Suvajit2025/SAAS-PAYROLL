@*Save Pay Config*@
<script>
    function SavePayConfig() {
        var jq = jQuery.noConflict();
        
        var PayConfigName = jq("#PayConfigName").val();
        var PayConfigType = jq("#ddlPayConfigType").val();
        var PayConfigent = jq("#ddlPayConfigentry").val();
        if (PayConfigName == "") {
            jq("#msgPayConfigName").html("Please Enter Payconfig");
            return false;
        }
        else {
            jq("#msgPayConfigName").html("");
        }
        if (PayConfigType == "0") {
            jq("#msgPayConfigType").html("Please select Payconfig type");
            return false;
        }
        else {
            jq("#msgPayConfigType").html("");
        }
        if (PayConfigent == "2") {
            jq("#msgPayConfigentrytype").html("Please select Payconfig entry type");
            return false;
        }
        else {
            jq("#msgPayConfigentrytype").html("");
        }
        var IScalculative;
        if (PayConfigent == "0") {
            IScalculative = "false";
        }
        else {
            IScalculative = "true";;
        }

        jq.ajax({
            type: "POST",
            url: '/PayConfig/SavePayConfig',
            
            data: {
                "PayConfigName": PayConfigName, "PayConfigType": PayConfigType, "IScalculative": IScalculative
            },
            datatype: "JSON",
            success: function (data) {
                
                if (data == "Saved Successfully") {

                    swal({
                        title: "Success!",
                        text: "Pay Config has been Added Successfully!",
                        type: "success"
                    }).then(function () {
                        window.location.href = "/PayConfig";
                    });
                }


            },
            error: function (er) {
                console.log(er);
            }
        });
    }
</script>

