@model MendinePayroll.Models.PayConfigModel
@{
    ViewBag.Title = "PayConfig";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Add*@
<div class="modal fade modal-header-color zoom-anim-dialog" id="payConfig" tabindex="-1" role="dialog" aria-labelledby="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <section class="">
                <header class="panel-heading bg-tertiary">
                    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="panel-title  text-white">Add New Pay Config</h2>
                </header>
            </section>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12 clearfix-height20"></div>
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <label class="control-label">PayConfig Name <span class="required">*</span></label>
                                <div class="input-group btn-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-cab"></i>
                                    </span>
                                    @Html.TextBoxFor(M => M.PayConfigName, new { @class = "form-control" })
                                </div>
                                <span id="msgPayConfigName" class="ms-error" style="color:red;"></span>

                            </div>
                        </div>
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <label class="control-label">PayConfig Type <span class="required">*</span></label>
                                <div class="input-group btn-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-cab"></i>
                                    </span>
                                    <select class="form-control" id="ddlPayConfigType" name="StudentGender">
                                        <option value="0">Select Type</option>
                                        <option value="Allowances">Allowances</option>
                                        <option value="Deduction">Deduction</option>
                                    </select>
                                </div>
                                <span id="msgPayConfigType" class="ms-error" style="color:red;"></span>

                            </div>
                        </div>
                        <div class="col-md-12 clearfix-height20"></div>
                        <div class='col-sm-12'>
                            <div class="form-group">
                                <label class="control-label">Entry Capital  <span class="required">*</span></label>
                                <select class="form-control" id="ddlPayConfigentry" name="StudentGender">
                                    <option value="2">Select Type</option>
                                    <option value="0">Manual</option>
                                    <option value="1">Calculative</option>
                                </select>
                                <span id="msgPayConfigentrytype" class="ms-error" style="color:red;"></span>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="btnPayGroup" class="btn btn-tertiary" onclick="return SavePayConfig()">
                    <i class="fa fa-plus-square space-right"></i> Add Pay Config
                </button>
            </div>

            <div id="progress" style="display:none;">
                <div class="col-md-12 text-center">
                    <img src="~/Contents/images/ajax-loader.gif" />
                </div>
            </div>

        </div>
    </div>
</div>

