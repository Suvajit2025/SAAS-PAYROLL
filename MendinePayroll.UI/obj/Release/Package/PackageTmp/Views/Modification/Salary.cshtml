@{
    ViewBag.Title = "Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body">
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <button id="btnSave" class="btn btn-sm btn-tertiary text-sm text-weight-semibold">Save Modification<i class="fa fa-plus ml-lg"></i></button>
            </div>
            <h2 class="panel-title">Salary ESI Modification</h2>
        </header>
        <div class="panel-body inputpanel">
            <div class="form-group row">
                <div class="col-md-2 mb-2">
                    <label>Employee Name</label>
                </div>
                <div class="col-md-4">
                    <input type="text" id="txtEmployee" class="form-control" maxlength="200" />
                    <input type="hidden" id="hdIDSalary" />
                </div>
                <div class="col-md-2 mb-2">
                    <label>Employee No</label>
                </div>
                <div class="col-md-4">
                    <input type="text" id="txtEmpno" class="form-control" maxlength="200" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2 mb-2">
                    <label>Month</label>
                </div>
                <div class="col-md-4">
                    <select class="form-control" id="ddlMonth">
                    </select>
                </div>
                <div class="col-md-2 mb-2">
                    <label>Year</label>
                </div>
                <div class="col-md-2">
                    <select class="form-control" id="ddlYear">
                    </select>
                </div>
                <div class="col-md-2 mb-2">
                    <button id="btnShow" class="btn btn-sm btn-tertiary text-sm text-weight-semibold">Show<i class="fa fa-plus ml-lg"></i></button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2 mb-2">
                    <label>Old ESI Value </label>
                </div>
                <div class="col-md-4">
                    <input type="number" id="txtESIOld" class="form-control" readonly />
                </div>
                <div class="col-md-2 mb-2">
                    <label>New ESI Value </label>
                </div>
                <div class="col-md-4">
                    <input type="number" id="txtESINew" class="form-control" />
                </div>

            </div>
        </div>
    </section>
</section>
<script src="~/ProjectJS/SalaryModification.js"></script>


